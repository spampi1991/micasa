<h1>Light Supplies</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @light_supplies.each do |light_supply| %>
      <tr>
        <td><%= light_supply.provider %></td>
        <td><%= light_supply.house.address %></td>
        <td><%= link_to 'Show', light_supply %></td>
        <td><%= link_to 'Edit', edit_light_supply_path(light_supply) %></td>
        <td><%= link_to 'Destroy', light_supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

