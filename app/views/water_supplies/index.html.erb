<p id="notice"><%= notice %></p>

<h1>Water Supplies</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @water_supplies.each do |water_supply| %>
      <tr>
        <td><%= water_supply.provider %></td>
        <td><%= water_supply.house.address %></td>
        <td><%= link_to 'Show', water_supply %></td>
        <td><%= link_to 'Edit', edit_water_supply_path(water_supply) %></td>
        <td><%= link_to 'Destroy', water_supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

